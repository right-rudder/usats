---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/ui/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";
import { COMPANY_NAME } from "../consts";

type Props = CollectionEntry<"blog">["data"];

const { title, author, description, pubDate, updatedDate, heroImage, tags } =
  Astro.props;
---

<BaseLayout
  siteTitle={title + ` | Blog | ${COMPANY_NAME}`}
  siteDescription={description}
  keywords={tags?.join(", ")}
  ogImage={heroImage}
>
  <div class="h-20 lg:h-28 w-full bg-primary-900/90"></div>

  <section
    class="flex justify-center items-start align-top pt-4 pb-20 bg-gradient-to-b from-primary-950/10 to-primary-800/20"
  >
    <article
      class="max-w-4xl flex flex-col justify-center align-middle items-center bg-primary-900 rounded-md overflow-hidden"
    >
      <div class="w-full aspect-video">
        {
          heroImage && (
            <img
              class="object-cover w-full h-full"
              src={heroImage}
              alt={title}
            />
          )
        }
      </div>
      <div class="font-sans1 py-12 text-muted-100">
        <div class="flex flex-col gap-6 px-6 lg:px-12">
          <div class="font-light text-muted-300">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <div class="last-updated-on text-muted-200">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
          </div>
          <h1 class="text-5xl font-sans leading-tight text-muted-400">
            {title}
          </h1>
          <p class="-mt-3 text-muted-200">by <strong>{author}</strong></p>
          {
            tags && (
              <div class="flex flex-wrap gap-2 w-full font-semibold font-sans2">
                {tags.slice(0, 3).map((tag) => (
                  <span class="bg-accent-800 py-1 px-2 rounded-sm capitalize text-xs">
                    {tag}
                  </span>
                ))}
              </div>
            )
          }
          <hr />
        </div>
        <div
          class="mt-8 px-6 flex justify-center prose-p:text-muted-100 prose-a:text-muted-200 prose-li:text-muted-100 prose-img:aspect-square lg:prose-img:aspect-auto prose-img:object-cover lg:prose-img:object-contain"
        >
          <slot />
        </div>
      </div>
    </article>
  </section>
</BaseLayout>