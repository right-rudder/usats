---
import localAttractions from "../../data/about-us/localAttractions"
import ImageComp from "../ImageComp.astro";

const attractions = localAttractions.localAttractions.attractions;
---

<div class="bg-primary-950 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        {attractions.map((attraction) => (
            <!-- Card -->
            <div class="mx-auto grid max-w-2xl grid-cols-1 items-start gap-x-8 gap-y-16 sm:gap-y-24 lg:mx-0 lg:max-w-none lg:grid-cols-2 mb-24">
                <div class="lg:pr-4">
                <div class="group relative overflow-hidden rounded-3xl  px-6 pt-64 pb-9 shadow-2xl sm:px-12 lg:max-w-lg lg:px-8 lg:pb-8 xl:px-10 xl:pb-10">
                    <ImageComp 
                        imagePath={attraction.imagePath}
                        imageAlt={attraction.imageAlt}
                        quality={60}
                        styles="absolute inset-0 size-full object-cover group-hover:brightness-125 hover:saturate-0 group-hover:-translate-y-3 group-hover:scale-105 duration-300 ease-out"
                        loading="lazy"
                    />
                    <div class="absolute inset-0 hover:bg-primary-600 hover:mix-blend-multiply"></div>
                    <figure class="relative isolate">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="absolute -top-4 -left-2 -z-10 h-32 stroke-white/20">
                        <path d="m1.204 4.056l1.833-1.834S9.759 4.463 13.63 6.704l4.31-4.31c.643-.643 1.461-1.089 2.363-1.212c.688-.094 1.532-.182 2.29-.182l.407.407c0 .757-.088 1.602-.182 2.29c-.123.902-.569 1.72-1.212 2.364l-4.31 4.31c2.241 3.87 4.482 10.592 4.482 10.592l-1.834 1.833s-3.666-5.296-6.722-8.352c0 0-2.264 1.45-5.703 4.89c0 0 .407 1.629.407 3.259L7.519 23s-1.63-2.037-3.056-3.463S1 16.482 1 16.482l.407-.408c1.63 0 3.26.407 3.26.407c3.439-3.439 4.889-5.703 4.889-5.703C6.5 7.722 1.204 4.056 1.204 4.056Z" stroke-width="1" />
                    </svg>
                    <img src="/src/assets/USATS_Logo_White.webp" alt="" class="h-12 w-auto">
                    <blockquote class="mt-6 text-xl/8 font-semibold text-white">
                        <p class="text-accent-700 group-hover:text-white">{attraction.name}</p>
                    </blockquote>
                    <figcaption class="mt-6 text-sm/6 text-muted-100"><strong class="font-semibold text-muted-600 group-hover:text-white">{localAttractions.localAttractions.title}</strong></figcaption>
                    </figure>
                </div>
                </div>


                <div>
                <div class="text-base/7 text-muted-400 lg:max-w-lg">
                    <p class="text-base/7 font-semibold text-accent-600">Close to USATS</p>
                    <h1 class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-muted-500 sm:text-5xl">{attraction.name}</h1>
                    <div class="max-w-xl">
                    <p class="mt-6 text-muted-100">{attraction.paragraph}</p>
                    </div>
                </div>

                
                <dl class="mt-10 grid grid-cols-2 gap-8 border-t border-muted-400/50 pt-10 sm:grid-cols-4">
                    {attraction.otherInfo.map((info) => (
                        <div>
                            <dt class="text-sm/6 font-semibold text-muted-400">{info.name}</dt>
                            <dd class="mt-2 text-3xl/10 font-bold tracking-tight text-muted-300">{info.value}</dd>
                        </div>
                    ))}
                </dl>
                

                <div class="mt-10 flex">
                    <a href="#" class="text-base/7 font-semibold text-accent-600">Learn more about our company <span aria-hidden="true">&rarr;</span></a>
                </div>
                </div>
            </div>
        ))}
    </div>
</div>