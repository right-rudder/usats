              <div class="mx-auto grid max-w-md grid-cols-1 gap-8 lg:max-w-4xl lg:grid-cols-2">
              <!-- image -->
                <div class="mx-auto w-full rounded-xl overflow-hidden  md:w-full ring-accent-800 group-hover:ring-2 group-hover:shadow-lg duration-200 ease-in-out" >
                  <ImageComp
                    imagePath="/src/assets/USATS_S300_on_Taxiway_Alpha.webp"
                    imageAlt=""
                    styles="h-full object-cover group-hover:scale-110 group-hover:shadow-lg group-hover:brightness-110 duration-300 ease-in-out"
                    quality={80}
                    loading="lazy"
                  />
                </div>
              
              
              <!-- Robinson Card  -->
              {data.robinson_service_center.benefits && <div class="flex flex-col justify-between rounded-3xl bg-primary-900 p-8 shadow-xl ring-1 ring-accent-900/60 sm:p-10">
