---
const { content } = Astro.props;
import ImageComp from "../ImageComp.astro";
---

<section id={content.title} class="relative py-12 lg:py-20 bg-primary-900">
  <div class="absolute -z-30 inset-0" aria-hidden="true">
    <ImageComp
      imagePath={content.image.imagePath}
      imageAlt={content.image.imageAlt}
      loading="eager"
      styles="absolute object-cover h-full w-full object-center -z-50"
      widths={[240, 540, 720, 1080, 1440, 1980]}
      sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
    />
    <div class="absolute bg-primary-900/70 w-full h-full z-0"></div>
  </div>
  <div class="flex items-center justify-center gap-9 md:gap-12 flex-wrap">
    <div class="lg:w-1/3">
      <h2
        class="mt-2 text-4xl font-bold tracking-tight uppercase leading-tighter text-primary-200 md:text-5xl lg:text-7xl text-center lg:text-right px-3 md:px-0"
        set:html={content.title}
      />
    </div>
    <div
      class="lg:w-1/3 text-lg leading-relaxed text-pretty font-normal text-primary-50 text-center lg:text-left"
    >
      {
        content.paragraphs &&
          content.paragraphs.map((paragraph) => (
            <p class="mb-2 px-9 lg:px-0 leading-6" set:html={paragraph} />
          ))
      }
    </div>
  </div>
  <div class="w-full flex justify-center gap-16 pt-8">
    {
      content.buttons &&
        content.buttons.map((button) => (
          <a href={button.link} class="btn-black text-2xl">
            {button.text}
          </a>
        ))
    }
  </div>
</section>
