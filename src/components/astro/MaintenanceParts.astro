---
const { engine, partSales } = Astro.props;
---

<div class="">
<div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-md grid-cols-1 gap-8 lg:max-w-4xl lg:grid-cols-2">
    <!-- Engine 1 -->
    <div id="engines" class="flex flex-col justify-between rounded-3xl bg-primary-900 p-8 shadow-xl ring-1 ring-accent-900/60 sm:p-10">
        <div>
        <h3 id="tier-hobby" class="text-base/7 font-semibold text-accent-600">{engine.name}</h3>
        <div class="mt-4 flex items-baseline gap-x-2">
            <span class="text-5xl font-semibold tracking-tight text-primary-600">{engine.name}</span>
            <span class="text-base/7 font-semibold text-muted-200"></span>
        </div>
        <p class="mt-6 text-base/7 text-muted-200">Modi dolorem expedita deleniti. Corporis iste qui inventore pariatur adipisci vitae.</p>
        <ul role="list" class="mt-10 space-y-4 text-sm/6 text-muted-200 flex justify-around place-items-baseline ">
            {
                engine.engines && engine.engines.map(( brand )=> (
                    <div>
                        <h4 id="tier-hobby" class="text-base/7 font-semibold text-accent-600">{brand.name}</h4>
                        {brand.models && brand.models.map(( engineName )=> (
                            <li class="flex gap-x-3">
                                <svg class="h-6 w-5 flex-none text-accent-600" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                                    <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
                                </svg>
                                {engineName}
                            </li>
                        ))}
                    </div>
                ))
            }
        </ul>
        </div>
        <a href="#" aria-describedby="tier-hobby" class="mt-8 block rounded-md bg-accent-600 px-3.5 py-2 text-center text-sm/6 font-semibold text-white shadow-xs hover:bg-accent-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-600">Get started today</a>
    </div>

    <!-- Card 2 -->
    <div id="engines" class="flex flex-col justify-between rounded-3xl bg-primary-900 p-8 shadow-xl ring-1 ring-accent-900/60 sm:p-10">
        <div>
        <h3 id="tier-hobby" class="text-base/7 font-semibold text-accent-600">{partSales.subtitle}</h3>
        <div class="mt-4 flex items-baseline gap-x-2">
            <span class="text-5xl font-semibold tracking-tight text-primary-600">{partSales.name}</span>
            <span class="text-base/7 font-semibold text-muted-200"></span>
        </div>
        <p class="mt-6 text-base/7 text-muted-200">Modi dolorem expedita deleniti. Corporis iste qui inventore pariatur adipisci vitae.</p>
        <ul role="list" class="mt-10 space-y-4 text-sm/6 text-muted-200 ">
            {partSales.bullets && partSales.bullets.map(( bullet )=> (
                <li class="flex gap-x-3">
                    <svg class="h-6 w-5 flex-none text-accent-600" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                        <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
                    </svg>
                    {bullet}
                </li>
              ))
            }
        </ul>
        </div>
        <a href="#" aria-describedby="tier-hobby" class="mt-8 block rounded-md bg-accent-600 px-3.5 py-2 text-center text-sm/6 font-semibold text-white shadow-xs hover:bg-accent-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-600">Get started today</a>
    </div>
    <!-- Bottom Card -->
    <div class="flex flex-col items-start gap-x-8 gap-y-6 rounded-3xl p-8 ring-1 ring-gray-900/10 sm:gap-y-10 sm:p-10 lg:col-span-2 lg:flex-row lg:items-center">
        <div class="lg:min-w-0 lg:flex-1">
        <h3 class="text-base/7 font-semibold text-accent-600">Still have questions? Schedule a visit!</h3>
        <p class="mt-1 text-base/7 text-muted-200">Dolor dolores repudiandae doloribus. Rerum sunt aut eum. Odit omnis non voluptatem sunt eos nostrum.</p>
        </div>
        <a href="/contact-us" class="rounded-md px-3.5 py-2 text-sm/6 font-semibold text-accent-600 ring-1 ring-accent-200 ring-inset hover:ring-accent-300 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-600"> Schedule a visit <span aria-hidden="true">&rarr;</span></a>
    </div>
    </div>
</div>
</div>
  