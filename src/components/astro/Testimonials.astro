---
const { content } = Astro.props;
---

<div class="relative isolate bg-black pt-24 pb-32 sm:pt-32">
  <div
    class="absolute inset-x-0 top-1/2 -z-10 -translate-y-1/2 transform-gpu overflow-hidden opacity-30 blur-3xl"
    aria-hidden="true"
  >
    <div
      class="ml-[max(50%,38rem)] aspect-1313/771 w-[82.0625rem] bg-linear-to-tr from-accent-950 to-accent-400"
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
    >
    </div>
  </div>
  <div
    class="absolute inset-x-0 top-0 -z-10 flex transform-gpu overflow-hidden pt-32 opacity-25 blur-3xl sm:pt-40 xl:justify-end"
    aria-hidden="true"
  >
    <div
      class="ml-[-22rem] aspect-1313/771 w-[82.0625rem] flex-none origin-top-right rotate-[30deg] bg-linear-to-tr from-[#ff80b5] to-[#9089fc] xl:mr-[calc(50%-12rem)] xl:ml-0"
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
    >
    </div>
  </div>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-5xl text-center">
      <h2 class="upperheading">{content.upperHeading}</h2>
      <p class="heading">{content.heading}</p>
    </div>
    <div
      class="mx-auto mt-16 grid max-w-2xl grid-cols-1 grid-rows-1 gap-8 text-sm/6 text-gray-900 sm:mt-20 sm:grid-cols-2 xl:mx-0 xl:max-w-none xl:grid-flow-col xl:grid-cols-4"
    >
    <!-- Main Card -->
      <figure
        class="rounded-sm bg-primary-600 ring-1 shadow-lg ring-gray-500/5 hover:bg-accent-900 hover:scale-110 transition-all duration-500 sm:col-span-2 xl:col-start-2 xl:row-end-1 hover:bg-accent-900 hover:scale-110 transition-all duration-500"
      >
        <blockquote
          class="p-6 text-lg font-medium tracking-tight text-gray-300 sm:p-12 sm:text-xl/8"
        >
          <p>
            {content.mainReview.body}
          </p>
        </blockquote>
        <figcaption
          class="flex flex-wrap items-center justify-center gap-x-4 gap-y-4 border-t border-gray-100/10 px-6 py-4 sm:flex-nowrap"
        >
          <div class="flex-auto text-center">
            <div class="font-bold text-xl text-gray-200 uppercase font-title">
              {content.mainReview.author}
            </div>
          </div>
        </figcaption>
      </figure>

      <!-- Other Cards -->
      <div class="space-y-8 xl:contents xl:space-y-0">
        <!-- Cards Left -->
        <div class="space-y-8 xl:row-span-2">
          <figure
            class="rounded-sm p-6 bg-primary-500 ring-1 shadow-lg ring-gray-500/5 hover:bg-accent-900 hover:scale-110 transition-all duration-500 hover:bg-accent-900 hover:scale-110 transition-all duration-500"
          >
            <blockquote class="text-gray-300">
              <p>
                {content.reviews[0].body}
              </p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-x-4">
              <div>
                <div class="font-bold text-gray-200 uppercase font-title">
                  {content.reviews[0].author}
                </div>
              </div>
            </figcaption>
          </figure>
          <figure
            class="rounded-sm p-6 bg-primary-500 ring-1 shadow-lg ring-gray-500/5 hover:bg-accent-900 hover:scale-110 transition-all duration-500"
          >
            <blockquote class="text-gray-300">
              <p>
                {content.reviews[1].body}
              </p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-x-4">
              <div>
                <div class="font-bold text-gray-200 uppercase font-title">
                  {content.reviews[1].author}
                </div>
              </div>
            </figcaption>
          </figure>
        </div>
        <!-- Card Bottom 1 -->
        <div class="space-y-8 xl:row-start-1">
          <figure
            class="rounded-sm p-6 bg-primary-500 ring-1 shadow-lg ring-gray-500/5 hover:bg-accent-900 hover:scale-110 transition-all duration-500"
          >
            <blockquote class="text-gray-300">
              <p>
                {content.reviews[4].body}
              </p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-x-4">
              <div>
                <div class="font-bold text-gray-200 uppercase font-title">
                  {content.reviews[4].author}
                </div>
              </div>
            </figcaption>
          </figure>

          <!-- More testimonials... -->
        </div>
      </div>

      <!-- Card Bottom 2 -->
      <div class="space-y-8 xl:contents xl:space-y-0">
        <div class="space-y-8 xl:row-start-1">
          <figure
            class="rounded-sm p-6 bg-primary-500 ring-1 shadow-lg ring-gray-500/5 hover:bg-accent-900 hover:scale-110 transition-all duration-500"
          >
            <blockquote class="text-gray-300">
              <p>
                {content.reviews[5].body}
              </p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-x-4">
              <div>
                <div class="font-bold text-gray-200 uppercase font-title">
                  {content.reviews[5].author}
                </div>
              </div>
            </figcaption>
          </figure>

          <!-- More testimonials... -->
        </div>

        <!-- Cards Right -->
        <div class="space-y-8 xl:row-span-2">
          <!-- Card Right  1 -->
          <figure
            class="rounded-sm p-6 bg-primary-500 ring-1 shadow-lg ring-gray-500/5 hover:bg-accent-900 hover:scale-110 transition-all duration-500"
          >
            <blockquote class="text-gray-300">
              <p>
                {content.reviews[2].body}
              </p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-x-4">
              <div>
                <div class="font-bold text-gray-200 uppercase font-title">
                  {content.reviews[2].author}
                </div>
              </div>
            </figcaption>
          </figure>
          
        <!-- Card Right  2 -->
          <figure
            class="rounded-sm p-6 bg-primary-500 ring-1 shadow-lg ring-gray-500/5 hover:bg-accent-900 hover:scale-110 transition-all duration-500"
          >
            <blockquote class="text-gray-300">
              <p>
                {content.reviews[3].body}
              </p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-x-4">
              <div>
                <div class="font-bold text-gray-200 uppercase font-title">
                  {content.reviews[3].author}
                </div>
              </div>
            </figcaption>
          </figure>

        </div>
      </div>
    </div>
  </div>
</div>
