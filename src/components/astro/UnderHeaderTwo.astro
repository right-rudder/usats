---
const { content } = Astro.props;
import ImageComp from "../ImageComp.astro";
---

<section id={content.title} class="relative py-12 lg:py-20 bg-primary-900">
  <div class="flex flex-col-reverse lg:flex-row items-center justify-center gap-9 md:gap-12">
    <div
      class="lg:w-1/3 max-w-2xl text-lg leading-relaxed text-pretty font-normal text-primary-50 text-center lg:text-right"
    >
      {
        content.paragraphs &&
          content.paragraphs.map((paragraph) => (
            <p class="mb-2 px-9 lg:px-0 leading-6" set:html={paragraph} />
          ))
      }
    </div>
    <div class="lg:w-1/3 max-w-2xl">
      <h2
        class="mt-2 text-4xl font-bold tracking-tight uppercase leading-tighter text-primary-200 md:text-5xl lg:text-7xl text-center lg:text-left px-3 md:px-0"
        set:html={content.title}
      />
    </div>
  </div>
</section>
