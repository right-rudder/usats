---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { content } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[content.imagePath]) {
  throw new Error(
    `"${content.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
}
---

<section
  class="relative lg:mt-0 lg:h-[81vh] -z-0 bg-gray-800 flex flex-col items-center justify-center overflow-hidden"
>
  <Image
    src={images[content.imagePath]()}
    alt={content.imageAlt}
    loading={"lazy"}
    class="absolute inset-0 -z-0 object-cover object-center w-full h-full"
    widths={[240, 540, 720, 1080, 1440, 1980]}
    sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
  />
  <div class="absolute bg-black/70 w-full h-full z-0"></div>
  <div
    class="text-accent-100 py-12 mt-20 lg:mt-0 text-left z-10 flex flex-col items-start gap-4 px-5 h-full lg:pt-28 justify-center"
  >
    <h3
      class="text-4xl md:text-4xl lg:text-6xl font-sans2 text-left md:max-w-3xl lg:max-w-6xl font-black italic tracking-wide text-accent-200 uppercase"
      set:html={content.headerH1}
    />
    <p
      class="text-base lg:text-xl mt-3 font-semibold tracking-wide text-accend-300 text-left max-w-5xl"
      set:html={content.paragraph}
    />
    <div
      class="mt-6 w-full flex flex-wrap justify-start align-middle items-center gap-6 z-10"
    >
      {
        content.buttons.map((btn) => (
          <a
            href={btn.link}
            class={`${btn.primary ? "btn-primary" : "btn-accent"} w-full lg:px-12 text-2xl md:w-auto`}
          >
            {btn.name}
          </a>
        ))
      }
    </div>
  </div>
</section>