---
import {
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  TWITTER_URL,
  PHONE_NUMBER,
  YOUTUBE_URL,
  BANNER_TITLE,
} from "../../consts";
import { FaPhoneSquareAlt, FaWhatsapp } from "react-icons/fa";
import { FaSignalMessenger } from "react-icons/fa6";
import formatPhoneNumber from "../../scripts/phone-format";
---

<div class="w-full bg-black z-0 h-12 px-4 lg:px-0 text-white">
  <div
    class="mx-auto flex max-w-[80rem] items-center align-middle h-full justify-between"
  >
    <div
      class="flex items-center lg:ml-9 justify-start align-middle gap-x-3 lg:w-1/4"
    >
      {
        LINKEDIN_URL && (
          <a
            href={LINKEDIN_URL}
            target="_blank"
            aria-label="LinkedIn"
            title="LinkedIn"
            class="transition-colors duration-300 hover:text-accent-700/90 hover:scale-110"
          >
            <svg viewBox="0 0 16 16" fill="currentColor" class="h-5">
              <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z" />
            </svg>
          </a>
        )
      }
      {
        INSTAGRAM_URL && (
          <a
            href={INSTAGRAM_URL}
            target="_blank"
            aria-label="Instagram"
            title="Instagram"
            class="transition-colors duration-300 hover:text-accent-700/70 hover:scale-110"
          >
            <svg viewBox="0 0 30 30" fill="currentColor" class="h-6">
              <circle cx="15" cy="15" r="4" />
              <path d="M19.999,3h-10C6.14,3,3,6.141,3,10.001v10C3,23.86,6.141,27,10.001,27h10C23.86,27,27,23.859,27,19.999v-10   C27,6.14,23.859,3,19.999,3z M15,21c-3.309,0-6-2.691-6-6s2.691-6,6-6s6,2.691,6,6S18.309,21,15,21z M22,9c-0.552,0-1-0.448-1-1   c0-0.552,0.448-1,1-1s1,0.448,1,1C23,8.552,22.552,9,22,9z" />
            </svg>
          </a>
        )
      }
      {
        FACEBOOK_URL && (
          <a
            href={FACEBOOK_URL}
            target="_blank"
            aria-label="Facebook"
            title="Facebook"
            class="transition-colors duration-300 hover:text-accent-700/70 hover:scale-110"
          >
            <svg viewBox="0 0 24 24" fill="currentColor" class="h-5">
              <path d="M22,0H2C0.895,0,0,0.895,0,2v20c0,1.105,0.895,2,2,2h11v-9h-3v-4h3V8.413c0-3.1,1.893-4.788,4.659-4.788 c1.325,0,2.463,0.099,2.795,0.143v3.24l-1.918,0.001c-1.504,0-1.795,0.715-1.795,1.763V11h4.44l-1,4h-3.44v9H22c1.105,0,2-0.895,2-2 V2C24,0.895,23.105,0,22,0z" />
            </svg>
          </a>
        )
      }
      {
        TWITTER_URL && (
          <a
            href={TWITTER_URL}
            target="_blank"
            aria-label="Twitter"
            title="X"
            class="transition-colors duration-300 hover:text-accent-700/70 hover:scale-110"
          >
            <svg
              class="size-7 -m-1 p-0"
              xmlns="http://www.w3.org/2000/svg"
              x="0px"
              y="0px"
              width="100"
              height="100"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M10.053,7.988l5.631,8.024h-1.497L8.566,7.988H10.053z M21,6v12	c0,1.657-1.343,3-3,3H6c-1.657,0-3-1.343-3-3V6c0-1.657,1.343-3,3-3h12C19.657,3,21,4.343,21,6z M17.538,17l-4.186-5.99L16.774,7	h-1.311l-2.704,3.16L10.552,7H6.702l3.941,5.633L6.906,17h1.333l3.001-3.516L13.698,17H17.538z" />
            </svg>
          </a>
        )
      }
      {
        YOUTUBE_URL && (
          <a
            href={YOUTUBE_URL}
            target="_blank"
            aria-label="Youtube"
            title="Youtube"
            class="transition-colors duration-300 hover:text-accent-700/70 hover:scale-110"
          >
            <svg
              class="size-7"
              xmlns="http://www.w3.org/2000/svg"
              x="0px"
              y="0px"
              width="100"
              height="100"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M21.582,6.186c-0.23-0.86-0.908-1.538-1.768-1.768C18.254,4,12,4,12,4S5.746,4,4.186,4.418 c-0.86,0.23-1.538,0.908-1.768,1.768C2,7.746,2,12,2,12s0,4.254,0.418,5.814c0.23,0.86,0.908,1.538,1.768,1.768 C5.746,20,12,20,12,20s6.254,0,7.814-0.418c0.861-0.23,1.538-0.908,1.768-1.768C22,16.254,22,12,22,12S22,7.746,21.582,6.186z M10,15.464V8.536L16,12L10,15.464z" />
            </svg>
          </a>
        )
      }
    </div>
    <p
      class="font-thin text-base hidden lg:block text-center lg:w-1/2"
      set:html={BANNER_TITLE}
    />
    <div class="flex align-middle items-center justify-end p-5 lg:w-1/3 ">
      <a aria-label="Chat on WhatsApp" href="https://wa.me/13215290795" target="_blank" class="hover:scale-125 transition-all cursor-pointer"> 
        <FaWhatsapp className="mr-2 text-lg lg:text-xl hover:text-green-600 " />
      <a /> 
      <a aria-label="Chat on WhatsApp" href="https://signal.me/13215290795" target="_blank" class="hover:scale-125 cursor-pointer transition-all"> 
        <FaSignalMessenger className="mr-2 text-lg lg:text-xl hover:text-blue-500" />
      <a />        
      <a
      href={`tel:${PHONE_NUMBER}`}
      aria-labelledby="Call Us Now"
      title="Call Us Now"
      class="flex align-middle items-center justify-end text-right text-base lg:text-lg font-sans font-bold hover:scale-110 cursor-pointer transition-all"
      aria-label="Call telephone Link"
    >
      <FaPhoneSquareAlt className="mr-2 text-lg lg:text-xl" />
      {formatPhoneNumber(PHONE_NUMBER)}</a
    >
    </div>
    
  </div>
</div>
