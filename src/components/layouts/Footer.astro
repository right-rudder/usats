      <div class="lg:col-span-2 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6">
        <!-- Logo -->
        <a
            href="/"
            aria-label="Go home"
            title="Company"
            class="flex justify-center items-center w-full"
        >
            <Image
            src={logo}
            alt="USATS Logo"
