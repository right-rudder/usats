---
const today = new Date();
import {
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  TWITTER_URL,
  YOUTUBE_URL,
  SITE_DESCRIPTION,
} from "../../consts";
import { footerLinks } from "../../data/footerLinks";
import logo from "../../../src/assets/USATS_Logo_White.webp";
import { Image } from "astro:assets";
import ImageComp from "../ImageComp.astro";

const { pathname } = Astro.url;
---

<footer class="relative bg-gradient-to-br from-primary-900 font-sans to-black">
  <div
    class="px-4 pt-24 pb-16 lg:pb-2 md:pt-12 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8"
  >
    <div class="grid gap-16 row-gap-10 mb-8 lg:grid-cols-6">
      <div class="lg:col-span-2">
        <a
          href="/"
          aria-label="Go home"
          title="Company"
          class="flex justify-center items-center w-full"
        >
          <Image
            src={logo}
            alt="Right Rudder Marketing Logo"
            class="object-contain h-36 w-auto px-5 lg:px-0 drop-shadow-lg"
          />
        </a>
        <div class="mt-2 lg:max-w-sm font-sans2">
          <p
            class="text-sm text-white px-3 lg:px-0 text-center lg:text-justify"
          >
            {SITE_DESCRIPTION}
          </p>
          <div
            class="flex justify-center lg:justify-start align-middle items-center w-full"
          >
            <a
              href="/privacy-policy"
              class="mt-3 mr-4 transition-colors duration-300 text-sm text-white hover:text-accent-100"
              >Privacy Policy
            </a>
            <span class="text-accent-200 text-sm pt-3"> &#x2022; </span>
            <a
              href="/terms-of-service"
              class="mt-3 ml-4 transition-colors duration-300 text-sm text-white hover:text-accent-100"
              >Terms of Service
            </a>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-2 mt-8 lg:col-span-4 lg:grid-cols-9">
        {
          footerLinks.map((column, index) => (
            <div
              class={`${index % 2 === 0 ? "text-left" : "text-right lg:text-left"} lg:col-span-2 lg:mt-20`}
            >
              <p class="font-bold text-xl font-sans lg:text-md tracking-wide text-accent-200">
                {column.title}
              </p>
              <ul class="mt-2 space-y-2 text-lg font-sans2 lg:text-sm">
                {column.links.map((link) => (
                  <li>
                    <a
                      href={link.link}
                      class="transition-colors duration-300 text-white hover:text-accent-100"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
        <div class="col-span-2 lg:col-span-3">
          <div class="flex flex-col items-center lg:mx-10 mx-5 lg:ml-32">
            <!--WIDGET METAR-->
            <a
              href="https://metar-taf.com/KHWO"
              target="blank"
              id="metartaf-B8VkYadJ"
              class="lg:w-96 w-72 bg-primary-800 p-4 rounded-md text-center"
              style="font-size:18px; font-weight:600; color:#FFF; display:block"
              >METAR North Perry Airport</a
            >
            <script
              async
              defer
              crossorigin="anonymous"
              src="https://metar-taf.com/embed-js/KHWO?bg_color=000000&layout=landscape&temp=f&visibility=mi&qnh=inHg&rh=rh&target=B8VkYadJ"
            ></script>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="pt-5 pb-10 border-t border-accent">
    <div
      class="mx-auto flex flex-col gap-2 lg:flex-row justify-between items-center align-middle max-w-7xl"
    >
      <p class="text-sm text-gray-100 text-center">
        Â© Copyright {today.getFullYear()} &#x2022; Sun City Aviation Academy &#x2022; All rights
        reserved.
      </p>
      <span class="text-white text-center flex gap-2">
        Powered by
        <a
          href="https://rightruddermarketing.com/"
          target="_blank"
          class="text-bold group hover:underline hover:text-white/70 flex gap-2 duration-200"
        >
          <ImageComp
            imagePath="/src/assets/RRM-R-symbol-474.webp"
            imageAlt="Right Rudder Marketing Logo"
            styles="h-6 w-auto group-hover:scale-105 group-hover:brightness-125 drop-shadow-md duration-300"
          />
          More Right Rudder</a
        >
      </span>
      <div
        class="flex items-center justify-center align-middle mt-4 space-x-4 sm:mt-0"
      >
        <a
          href={LINKEDIN_URL}
          target="_blank"
          aria-label="LinkedIn"
          title="LinkedIn"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 16 16" fill="currentColor" class="h-8 lg:h-5">
            <path
              d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
            ></path>
          </svg>
        </a>
        <a
          href={INSTAGRAM_URL}
          target="_blank"
          aria-label="Instagram"
          title="Instagram"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 30 30" fill="currentColor" class="h-10 lg:h-6">
            <circle cx="15" cy="15" r="4"></circle>
            <path
              d="M19.999,3h-10C6.14,3,3,6.141,3,10.001v10C3,23.86,6.141,27,10.001,27h10C23.86,27,27,23.859,27,19.999v-10   C27,6.14,23.859,3,19.999,3z M15,21c-3.309,0-6-2.691-6-6s2.691-6,6-6s6,2.691,6,6S18.309,21,15,21z M22,9c-0.552,0-1-0.448-1-1   c0-0.552,0.448-1,1-1s1,0.448,1,1C23,8.552,22.552,9,22,9z"
            ></path>
          </svg>
        </a>
        <a
          href={FACEBOOK_URL}
          target="_blank"
          aria-label="Facebook"
          title="Facebook"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 24 24" fill="currentColor" class="h-8 lg:h-5">
            <path
              d="M22,0H2C0.895,0,0,0.895,0,2v20c0,1.105,0.895,2,2,2h11v-9h-3v-4h3V8.413c0-3.1,1.893-4.788,4.659-4.788 c1.325,0,2.463,0.099,2.795,0.143v3.24l-1.918,0.001c-1.504,0-1.795,0.715-1.795,1.763V11h4.44l-1,4h-3.44v9H22c1.105,0,2-0.895,2-2 V2C24,0.895,23.105,0,22,0z"
            ></path>
          </svg>
        </a>
        <a
          href={TWITTER_URL}
          target="_blank"
          aria-label="X"
          title="X"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg
            class="size-7 -m-1 p-0"
            xmlns="http://www.w3.org/2000/svg"
            x="0px"
            y="0px"
            width="100"
            height="100"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M10.053,7.988l5.631,8.024h-1.497L8.566,7.988H10.053z M21,6v12	c0,1.657-1.343,3-3,3H6c-1.657,0-3-1.343-3-3V6c0-1.657,1.343-3,3-3h12C19.657,3,21,4.343,21,6z M17.538,17l-4.186-5.99L16.774,7	h-1.311l-2.704,3.16L10.552,7H6.702l3.941,5.633L6.906,17h1.333l3.001-3.516L13.698,17H17.538z"
            ></path>
          </svg>
        </a>
        <a
          href={YOUTUBE_URL}
          target="_blank"
          aria-label="Youtube"
          title="Youtube"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg
            class="size-7"
            xmlns="http://www.w3.org/2000/svg"
            x="0px"
            y="0px"
            width="100"
            height="100"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M21.582,6.186c-0.23-0.86-0.908-1.538-1.768-1.768C18.254,4,12,4,12,4S5.746,4,4.186,4.418 c-0.86,0.23-1.538,0.908-1.768,1.768C2,7.746,2,12,2,12s0,4.254,0.418,5.814c0.23,0.86,0.908,1.538,1.768,1.768 C5.746,20,12,20,12,20s6.254,0,7.814-0.418c0.861-0.23,1.538-0.908,1.768-1.768C22,16.254,22,12,22,12S22,7.746,21.582,6.186z M10,15.464V8.536L16,12L10,15.464z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
