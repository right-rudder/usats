---
import {
  COMPANY_NICKNAME,
  ADDRESS,
  ADDRESS_CITY,
  ADDRESS_STATE,
  ADDRESS_ZIP,
  AIRPORT,
  AIRPORT_CODE,
  PHONE_NUMBER,
  EMAIL_ADDRESS,
} from "../../consts";
import DiscoveryForm from "../../components/astro/DiscoveryForm.astro";
---

<section
  class="relative z-10 bg-primary-900 bg-fixed text-accent-800 scroll-my-20 lg:scroll-my-28"
  id="contact"
>
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="w-full flex flex-col items-center">
      <h2
        class="text-center text-3xl font-semibold tracking-tighter uppercase pt-16 pb-5"
      >
        Discovery Flights
      </h2>
      <div class="bg-primary-800 w-48 h-1 mb-16"></div>
    </div>

    <div class="flex flex-col-reverse lg:flex-row">
      <!-- Text Section -->
      <div class="w-full lg:w-1/2">
        <div class="flex flex-col items-center">
          <h3 class="text-3xl font-semibold text-center">
            Reach Out to {COMPANY_NICKNAME}
          </h3>
          <h4 class="text-2xl tracking-wider pb-5 text-center text-gray-100">
            Let's Get You In The Air
          </h4>
          <div class="bg-primary-800 w-72 h-1 mb-16"></div>

          <!--MAP-->
          <div class="flex flex-col gap-5 max-w-2xl pb-10 px-5">
            <div class="flex flex-row">
              <div class="text-primary-100">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                  ></path>
                </svg>
              </div>
              <a href="https://www.google.com/maps/place/LA+Flight+Academy/@34.2156594,-118.5006784,18z/data=!4m6!3m5!1s0x80c29b575d802a67:0xe01d873d173f2b15!8m2!3d34.2162898!4d-118.5005974!16s%2Fg%2F11m_n29735?entry=ttu&g_ep=EgoyMDI1MDExNS4wIKXMDSoASAFQAw%3D%3D" class="ml-5 p-text text-gray-300">
                {AIRPORT} ({AIRPORT_CODE})<br />
                {ADDRESS}<br />
                {ADDRESS_CITY}, {ADDRESS_STATE}
                {ADDRESS_ZIP}
              </a>
            </div>

            <div class="flex flex-row">
              <div class="text-muted-100">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                  ></path>
                </svg>
              </div>
              <div class="ml-5 p-text text-gray-300">
                <a href=`tel:${PHONE_NUMBER}`>{PHONE_NUMBER}</a><br />
              </div>
            </div>

            <!-- <div class="flex flex-row">
              <div class="text-primary-100">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                  ></path>
                </svg>
              </div>
              <div class="ml-5 p-text text-gray-300">
                <a href={`mailto:${EMAIL_ADDRESS}`}>{EMAIL_ADDRESS}</a>
              </div>
            </div> -->

            <div class="flex flex-row">
              <div class="fill-white">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  height="24"
                  viewBox="0 -960 960 960"
                  width="24"
                  ><path
                    d="m612-292 56-56-148-148v-184h-80v216l172 172ZM480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-400Zm0 320q133 0 226.5-93.5T800-480q0-133-93.5-226.5T480-800q-133 0-226.5 93.5T160-480q0 133 93.5 226.5T480-160Z"
                  ></path></svg
                >
              </div>
              <div class="ml-5 p-text text-gray-300">
                9:00 AM to 5:00 PM<br />
                All other times by appointment
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Section -->
      <div class="w-full lg:w-1/2">
        <div class="mx-auto px-10">
          <DiscoveryForm />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);

  const contactUs = document.getElementById("contactUs");

  if (isSafari && contactUs) {
    contactUs.classList.remove("bg-fixed");
  }
</script>