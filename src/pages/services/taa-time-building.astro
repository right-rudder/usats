---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderScreen from "../../components/astro/HeaderScreen.astro";
import ProgramDetails from "../../components/layouts/ProgramDetails.astro";
import taaTimeBuilding from "../../data/services/taaTimeBuilding";
import Table from "../../components/astro/Table.astro";

import {    
    ALTONG_FLYING_OVER_COAST as imgHeader,
    ALTONG_MAINTENANCE as imgMaintenance,
    ALTONG_PANEL as imgPanel,
 } from "../../constsImages";

const coursesIndex = {
  data: {
    // SEO Header Stuff
    pageTitle: "",
    pageDescription:
      "",
    pageKeywords:
      "",

    // Top Header
    header: {
      stars: true,
      imagePath: imgHeader.imagePath,
      imageAlt: imgHeader.imageAlt,
      headerH1: `TAA Time Building in a 2024 Alto NG`,
      paragraph: `TAA time building starting at $50 per hour`,
      buttons: [
        {
          name: "More info",
