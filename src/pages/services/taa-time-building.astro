---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderScreen from "../../components/astro/HeaderScreen.astro";
import CTAColor from "../../components/astro/CTADiscoveryFlights.astro";
import CTAFlight from "../../data/ctaFlight.js";
import ProgramDetails from "../../components/layouts/ProgramDetails.astro";
import taaTimeBuilding from "../../data/services/taaTimeBuilding";
import { ALTO_5A as imgHeader } from "../../constsImages";

const coursesIndex = {
  data: {
    // SEO Header Stuff
    pageTitle: "",
    pageDescription:
      "",
    pageKeywords:
      "",

    // Top Header
    header: {
      stars: true,
      imagePath: "/src/assets/placeholder.webp",
      imageAlt: "",
      headerH1: `TAA Time Building in a 2024 Alto NG`,
      paragraph: `TAA time building starting at $50 per hour`,
      buttons: [
        {
          name: "More info",
          link: "#programs",
          primary: true,
        },
      ],
    },
  },
};

const { data } = coursesIndex;
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
  <HeaderScreen content={data.header} />
  <ProgramDetails program={taaTimeBuilding.data.details} />
  <CTAColor content={CTAFlight} />
</BaseLayout>
