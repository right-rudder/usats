---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderScreen from "../components/astro/HeaderScreen.astro";
import CTADiscoveryFlight from "../components/astro/CTADiscoveryFlights.astro";
import whyBecomePilot from "../data/why-become-a-pilot";
import Content from "../components/astro/Content.astro";

const { data } = whyBecomePilot;

import { CAREER_PATH_KEYWORDS, DISCOVERY_EXPERIENCE_KEYWORDS, GENERAL_AVIATION_KEYWORDS, LOCATION_KEYWORDS } from "../consts";
const keywords = `${DISCOVERY_EXPERIENCE_KEYWORDS}, ${GENERAL_AVIATION_KEYWORDS}, ${CAREER_PATH_KEYWORDS}, ${LOCATION_KEYWORDS}`;

---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={keywords}
>
  <!-- HEADER -->
  <HeaderScreen content={data.header} />

  <Content data={data.shouldBePilot} />

  <CTADiscoveryFlight content={data.flyWithUsCTA} />
</BaseLayout>
