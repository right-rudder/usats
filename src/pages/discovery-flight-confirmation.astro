---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderScreen from "../components/astro/HeaderScreen.astro";
import {
  AIRCRAFT_FLEET_KEYWORDS,
    COMPANY_NAME,
    DISCOVERY_EXPERIENCE_KEYWORDS,
    KEYWORDS,
  } from "../consts";
  
import { ALTO_5A as imgHeader } from "../constsImages";
import { AVIATION_SERVICES_KEYWORDS, GENERAL_AVIATION_KEYWORDS, LOCATION_KEYWORDS, RENTAL_GROUND_KEYWORDS, TECH_TRAINING_KEYWORDS } from "../consts";


const discoveryFlightConfirmation = {
    data: {
      //SEO Header Stuff
      pageTitle: `Discovery Flight Confirmation | ${COMPANY_NAME}`,
      pageDescription:
        `Start your aviation journey with a discovery flight at ${COMPANY_NAME}. Contact us to schedule your flight today!`,
      pageKeywords:
        `discovery flight, contact us, enroll at ${COMPANY_NAME}, discovery flight training, discovery flight school, aviation academy, ${COMPANY_NAME}, flight training programs, aviation goals, ${KEYWORDS}`,
  
      header: {
        imagePath:imgHeader.imagePath,
        imageAlt: imgHeader.imageAlt,
        headerH1: "THANK YOU",
        paragraph:
          `Thank for your interest in ${COMPANY_NAME}. This is the first step to achieving your aviation goals!<br>Please allow 1-2 business days for one of our Training Support Specialists to get in touch with you`,
        buttons: [
          {
            name: "Home Page",
            link: "/",
            primary: false,
          },
        ],
      },
    }
  };

const { data } = discoveryFlightConfirmation;

const keywords = `${DISCOVERY_EXPERIENCE_KEYWORDS}, ${AIRCRAFT_FLEET_KEYWORDS}, ${RENTAL_GROUND_KEYWORDS}, ${AVIATION_SERVICES_KEYWORDS}, ${TECH_TRAINING_KEYWORDS}, ${LOCATION_KEYWORDS}, ${GENERAL_AVIATION_KEYWORDS}, ${data.pageKeywords}`;

---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={keywords}
>
  <HeaderScreen content={data.header} />
</BaseLayout>

