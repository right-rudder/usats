---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderScreen from "../../components/astro/HeaderScreen.astro";
import GridPrograms from "../../components/layouts/GridPrograms.astro";
import programs from "../../data/programsSwiper.js";
import CTADiscoveryFlights from "../../components/astro/CTADiscoveryFlights.astro";
import CTAFlight from "../../data/ctaFlight.js";

import coursesIndex from "../../data/coursesIndex.js";
import UnderHeaderTwo from "../../components/astro/UnderHeaderTwo.astro";

const { data } = coursesIndex;
const underHeader = {
  title: "Why Choose USATS for Your Aviation Needs",
  paragraphs: [
    "USATS centralizes every major aviation service in one convenient location, creating a smooth and efficient experience for pilots, students, and aviation professionals.",
    "You can log TAA hours, complete FAA knowledge exams, schedule maintenance, or begin a foreign license conversion process without needing to coordinate across multiple providers.",
    "Our team guides each step with clear communication and dependable expertise, which helps reduce stress and keeps your goals on track."
  ],
  image: {
    imagePath: "/src/assets/ALTO_NG.webp",
    imageAlt: "AirPlane Panel",
  },
  buttons: [],
}

import { AIRCRAFT_FLEET_KEYWORDS, CAREER_PATH_KEYWORDS, CORE_PROGRAM_KEYWORDS, DISCOVERY_EXPERIENCE_KEYWORDS, GENERAL_AVIATION_KEYWORDS, LOCATION_KEYWORDS } from "../../consts";
const keywords = `${GENERAL_AVIATION_KEYWORDS}, ${CORE_PROGRAM_KEYWORDS}, ${LOCATION_KEYWORDS}, ${DISCOVERY_EXPERIENCE_KEYWORDS}, ${CAREER_PATH_KEYWORDS}, ${AIRCRAFT_FLEET_KEYWORDS}, ${data.pageKeywords}`

---
<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={keywords}
  >
  
  <HeaderScreen content = {data.header} />
  <UnderHeaderTwo content={underHeader}/>
  <GridPrograms content={programs} />
  <CTADiscoveryFlights content={CTAFlight} />
</BaseLayout>

