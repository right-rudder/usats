---
import terms from "../data/terms-of-service";
import BaseLayout from "../layouts/BaseLayout.astro";
import { AVIATION_SERVICES_KEYWORDS, COMPANY_NAME, GENERAL_AVIATION_KEYWORDS, LOCATION_KEYWORDS } from "../consts";

const { data } = terms;

const keywords = `${GENERAL_AVIATION_KEYWORDS}, ${LOCATION_KEYWORDS}, ${AVIATION_SERVICES_KEYWORDS}`;
---

<BaseLayout
  siteTitle=`Terms of Service | ${COMPANY_NAME}`
  siteDescription=`Terms of Service of ${COMPANY_NAME}`
  keywords={keywords}
>
  <div class="h-24 lg:h-32 w-full"></div>

  <section class="pt-12 font-serif flex flex-col items-center bg-primary-900">
    <h1
      class="mx-auto text-center px-6 lg:px-0 text-primary-600 font-black max-w-4xl text-5xl lg:text-6xl"
      set:html={data.heading}
    />
    <p
      class="mx-auto mt-2 text-muted-400 text-center"
      set:html={data.subheading}
    />
    <div class="w-4/5 mt-12 lg:w-3/5 py-10">
      {
        data.content.map((part) => (
          <div class="mb-12">
            <h2 class="font-bold text-primary-400 tracking-tight uppercase mb-3 text-3xl">
              {part.heading}
            </h2>
            {part.paragraphs.map((paragraph) => (
              <p
                class="mb-3 leading-relaxed text-muted-200 text-justify"
                set:html={paragraph}
              />
            ))}
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>