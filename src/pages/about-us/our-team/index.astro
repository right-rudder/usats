---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import HeaderScreen from "../../../components/astro/HeaderScreen.astro";
import homePage from "../../../data/homePage";
import "/src/styles/global.css";
import ourTeam from "../../../data/about-us/ourTeam";
import { ourTeamSEO } from "../../../data/about-us/ourTeam";
import StaffGrid from "../../../components/layouts/StaffGrid.astro";
import TeamGrid from "../../../components/layouts/TeamGrid.astro";
import HeaderOurTeam from "../../../components/astro/HeaderOurTeam.astro";
import { CAREER_PATH_KEYWORDS, GENERAL_AVIATION_KEYWORDS, LOCATION_KEYWORDS } from "../../../consts";

const { data } = homePage;

const keywords = `${GENERAL_AVIATION_KEYWORDS}, ${LOCATION_KEYWORDS}, ${CAREER_PATH_KEYWORDS}, ${ourTeamSEO.pageKeywords}`;

---

<BaseLayout
  siteTitle={ourTeamSEO.pageTitle}
  siteDescription={ourTeamSEO.pageDescription}
  keywords={keywords}
>
  <!-- HEADER -->
  <!-- <HeaderScreen content={ourTeam.header} /> -->
  <HeaderOurTeam data={ourTeam} />
  <StaffGrid data={ourTeam.staffGrid} />
  <TeamGrid data={ourTeam.fixedWingTeam} />
  <TeamGrid data={ourTeam.rotorWingTeam} />
</BaseLayout>
