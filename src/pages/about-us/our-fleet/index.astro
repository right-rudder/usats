---
import BaseLayout from "../../../layouts/BaseLayout.astro";
// import HeaderSmall from "../../../components/HeaderSmall.astro";
import { Image } from "astro:assets";
import Intro from "../../../assets/alto_5a.jpg";
import ourFleet from "../../../data/about-us/ourFleet";
import PlaneCard from "../../../components/astro/PlaneCard.astro";
import PageSummary from "../../../components/astro/PageSummary.astro";
import HeaderSmall from "../../../components/astro/HeaderSmall.astro";

import {
  airplaneFleet,
  helicopterFleet,
  militaryFleet,
} from "../../../data/about-us/fleet";

import { COMPANY_NAME, COMPANY_NICKNAME } from "../../../consts";

import { ALTO_8A as imgHeader } from "../../../constsImages";

const header = {
  imagePath: imgHeader.imagePath,
  imageAlt: imgHeader.imageAlt,
  headerH1: "Our Fleet",
  paragraph: "",
  buttons: [
    {
      name: "View Our Aircraft",
      link: "#airplane-fleet",
      primary: false,
    },
  ],
};
---

<BaseLayout
  siteTitle=`Fleet | ${COMPANY_NAME}`
  siteDescription=`Explore ${COMPANY_NAME}'s modern aircraft available for training and time building in Hampton, GA. Our fleet includes Cessna 172s equipped for both VFR and IFR operations.`
  keywords=" fleet, aircraft, training, time building, Cessna 172, Hampton GA, aviation school"
>
  <HeaderSmall content={header} />

  <section class="py-24 px-5 bg-primary-900">
    <div
      class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:gap-20"
    >
      <div class="flex-1 relative">
        <Image
          class="pr-6 animate-slow-zoom h-full object-cover group-hover:scale-110 delay-100 duration-500 ease-in-out -z-0"
          src={Intro}
          alt=`${COMPANY_NAME} tail view of a Cessna`
          widths={[240, 540, 720, 1080, 1440, 1980]}
          sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
        />
        <div
          class="h-3/4 bg-primary-600 absolute -z-10 -right-0 w-20 top-[12.5%]"
        >
        </div>
      </div>
      <div class="flex flex-col flex-1">
        <h2 class="uppercase text-muted-500 font-bold tracking-widest">
          Our Fleet
        </h2>
        <h3 class="text-5xl text-white font-bold leading-tight">
          Fly with Confidence
        </h3>
        <p class="text-muted-200 leading-relaxed my-5">
          At {COMPANY_NICKNAME}, our diverse fleet supports a wide range of
          aviation training needs. Our fleet includes aircraft such as the
          Cessna 172s, Alto-NG, R44, S300.<strong>
            Additionally, USATS has the flexibility to acquire other aircraft
            types to meet specific training requirements, ensuring a fully
            customized training experience.</strong
          > Explore the full fleet below.
        </p>
        <div class="flex flex-col sm:flex-row items-center gap-5">
          <a href="/discovery-flight" class="btn-primary">Book a Flight</a>
        </div>
      </div>
    </div>
  </section>

  <section
    id="airplane-fleet"
    class="py-24 px-5 scroll-my-20 bg-gradient-to-b from-black to-primary-900"
  >
    <div class="max-w-xl lg:max-w-7xl mx-auto flex flex-col items-center">
      <!-- <h2 class="uppercase text-accent-800 font-bold tracking-widest">
        Our Airplanes
      </h2> -->
      <h2 class="text-5xl text-accent-600 font-bold leading-tight mb-5">
        Our Airplane Fleet
      </h2>

      <div class="grid gap-8 mt-5 lg:grid-cols-2">
        {
          airplaneFleet
            .filter((plane) => !plane.advancedOnly)
            .map((plane) => (
              <PlaneCard
                name={plane.name}
                rentalPrice={plane.rentalPrice}
                imagePath={plane.imagePath}
                slug={plane.slug}
                model={plane.model}
                hasRibbon={plane.hasRibbon}
                ribbonTitle={plane.ribbonTitle}
                specialUrl={plane.specialUrl}
              />
            ))
        }
      </div>
    </div>
  </section>

  <section
    id="helicopter-fleet"
    class="py-12 px-5 scroll-my-20 bg-gradient-to-b from-black to-primary-900"
  >
    <div
      class="max-w-xl lg:max-w-7xl mx-auto flex flex-col items-center pt-20 lg:pt-30"
    >
      <!-- <h2 class="uppercase text-accent-800 font-bold tracking-widest">
        Our Airplanes
      </h2> -->
      <h2 class="text-5xl text-accent-600 font-bold leading-tight mb-5">
        Our Helicopter Fleet
      </h2>
      <div class="grid gap-4 mt-5 lg:grid-cols-2">
        {
          helicopterFleet
            .filter((plane) => !plane.advancedOnly)
            .map((plane) => (
              <PlaneCard
                name={plane.name}
                rentalPrice={plane.rentalPrice}
                imagePath={plane.imagePath}
                slug={plane.slug}
                model={plane.model}
                hasRibbon={plane.hasRibbon}
                ribbonTitle={plane.ribbonTitle}
                specialUrl={plane.specialUrl}
              />
            ))
        }
      </div>
    </div>
  </section>

  <!-- <section id="military-fleet" class="py-12 px-5 scroll-my-20 bg-gradient-to-b from-black to-primary-900">

    <div class="max-w-xl lg:max-w-7xl mx-auto flex flex-col items-center pt-20 lg:pt-30">
      <h2 class="text-5xl text-accent-600 font-bold leading-tight mb-5">
        Our Military Fleet
      </h2>
      <div class="grid gap-4 mt-5 lg:grid-cols-2">
        {
          militaryFleet
            .filter((plane) => !plane.advancedOnly)
            .map((plane) => (
              <PlaneCard
                name={plane.name}
                rentalPrice={plane.rentalPrice}
                imagePath={plane.imagePath}
                slug={plane.slug}
                model={plane.model}
                hasRibbon={plane.hasRibbon}
                ribbonTitle={plane.ribbonTitle}
                specialUrl={plane.specialUrl}
              />
            ))
        }
      </div>
    </div>
  </section> -->

  <section class="py-12 px-5 bg-primary-900">
    <div
      class="max-w-7xl mx-auto gap-10 lg:gap-52 flex justify-between items-center lg:flex-row flex-col"
    >
      <div>
        <h3
          class="text-5xl text-white font-bold leading-tight text-center lg:text-left"
        >
          Reach out to fly with {COMPANY_NICKNAME}
        </h3>
      </div>
      <a href="/enroll-now" class="flex-shrink-0 btn-accent"> Enroll now </a>
    </div>
  </section>
</BaseLayout>
