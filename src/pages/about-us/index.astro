---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderScreen from "../../components/astro/HeaderScreen.astro";
import WhoAreUs from "../../components/astro/WhoAreUs.astro";

import aboutUs from "../../data/about-us/aboutUs";
import PageSummary from "../../components/astro/PageSummary.astro";
import { CAREER_PATH_KEYWORDS, CORE_PROGRAM_KEYWORDS, GENERAL_AVIATION_KEYWORDS, LOCATION_KEYWORDS, VIDEOLINK_ABOUTUS } from "../../consts";
import BestOfFlorida from "../../components/astro/BestOfFlorida.astro";

const keywords = `${aboutUs.pageKeywords}, ${GENERAL_AVIATION_KEYWORDS}, ${LOCATION_KEYWORDS}, ${CORE_PROGRAM_KEYWORDS}, ${CAREER_PATH_KEYWORDS}`;

---

<BaseLayout
  siteTitle={aboutUs.pageTitle}
  siteDescription={aboutUs.pageDescription}
  keywords={keywords}
  breadcrumbTitle="About Us"
>
  <!-- HEADER -->
  <HeaderScreen content={aboutUs.header} headerVideo={VIDEOLINK_ABOUTUS} />
  <PageSummary content={aboutUs.pageSummary} />
  <WhoAreUs content={aboutUs.whatWeOffer} />
  <BestOfFlorida />
