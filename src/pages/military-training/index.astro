---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderScreen from "../../components/astro/HeaderScreen.astro";
import CTAMilitary from "../../components/astro/CTAMilitary.astro";
import ctaMilitary from "../../data/programs/ctaMilitary.js";

import UnderHeader from "../../components/astro/UnderHeader.astro";
import ProgramDetails from "../../components/layouts/ProgramDetails.astro";

import militaryTraining from "../../data/programs/helicopter/militaryTraining";
import militaryPage from "../../data/programs/militaryIndex";
import RoadMap from "../../components/astro/RoadMap.astro";

const pageTitle = "Military Training Program | USATS Florida";
const pageDescription =
  "Military Training Program at USATS Florida. Get the best military helicopter training and flight training in the USA.";
const pageKeywords =
  "military training, military helicopter training, military flight training, military pilot training, military aviation training, USATS Florida, USATS, helicopter training, flight training, aviation training";
---

<BaseLayout
  siteTitle={pageTitle}
  siteDescription={pageDescription}
  keywords={pageKeywords}
>
  <HeaderScreen content={militaryPage.data.header} />
  <UnderHeader content={militaryPage.data.underHeader} />
  <ProgramDetails program={militaryTraining.data.details} />
  <RoadMap />
  <CTAMilitary content={ctaMilitary} />
</BaseLayout>
